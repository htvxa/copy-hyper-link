{
  "name": "Copy Hyper Link",
  "description": "Fully functional, useful bare minimum Google Chrome extension boilerplate [Manifest V3].",
  "version": "2.0.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Click to Copy Hyper Link",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "content_scripts": [
    {
      "run_at": "document_idle",
      "js": ["after.js"],
      "matches": ["https://*/*"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["activeTab", "clipboardWrite", "scripting"],
  "host_permissions": ["https://*/*"]
}
